<!DOCTYPE html>
<% slots.crumbs.unshift({'title': 'Home', 'href': '/'}) %>
<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>justjs: <%= slots.title %></title>
  <link href="/static/css/justjs.css" rel="stylesheet" />
  <link href="/static/bootstrap/css/bootstrap.css" rel="stylesheet" />
  <link href="/static/bootstrap/css/bootstrap-responsive.css" rel="stylesheet" />
</head>
<body class="<%- slots.bodyClass %>">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="/">justjs</a>
        <div data-view="login" class="btn-group pull-right">
          <%- partial('login', {}) %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="span6">
        <ul class="breadcrumb" data-view="crumbs">
          <%- partial('crumbs', {}) %>
        </ul>
      </div>
    </div>
    <div data-view="error">
      <%- partial('error', {}) %>
    </div>
    <div class="row">
      <div class="span12">
        <div data-view="title"><h1>justjs: <%= slots.title %></h1></div>
        <div data-view="body">
          <%- slots.body %>
        </div>
      </div>
    </div>
  </div>
  <!-- Scripts at the end, for faster page load -->
  <script type="text/javascript">
    var templates = <%-: slots.templates | json %>;
    var permissions = <%-: slots.permissions | json %>;
  </script>
  <script type="text/javascript" src="/static/js/jquery-1.7.2.min.js"></script>
  <script type="text/javascript" src="/static/js/underscore-min.js"></script>
  <script type="text/javascript" src="/static/js/ejs.min.js"></script>
  <script type="text/javascript" src="/static/js/backbone-min.js"></script>
  <script type="text/javascript" src="/static/bootstrap/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="/static/ckeditor/ckeditor.js"></script>
  <script type="text/javascript" src="/static/js/justjs.js"></script>
  <script type="text/javascript">
    var app = new Justjs();
    app.init();
  </script>
</body>
</html>
