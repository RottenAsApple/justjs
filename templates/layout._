<% _.defaults(slots, { title: '', bodyClass: '', crumbs: [] }) %>
<% slots.crumbs.unshift({'title': 'Home', 'href': '/'}) %>
<html>
<head>
<title>justjs<%- slots.title %></title>
</head>
<body class="justjs <%= slots.bodyClass %>">
<% if (slots.user) { %>
	<h4><%- slots.user.username %> <a href="/logout">Log Out</a></h4>
<% } else { %>
	<h4><a href="/auth/twitter">Sign in with Twitter</a></h4>
<% } %>
<h1>justjs<%- slots.title %></h1>
<%= partial('crumbs', {}) %>
<div class="body">
  <%= slots.body %>
</div>
</body>
</html>
